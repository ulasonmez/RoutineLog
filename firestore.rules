rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Explicitly deny access to everything by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to access only their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow friends to read specific collections
    match /users/{userId}/logs/{logId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/users/$(userId)/friends/$(request.auth.uid))
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/items/{itemId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/users/$(userId)/friends/$(request.auth.uid))
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/groups/{groupId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        exists(/databases/$(database)/documents/users/$(userId)/friends/$(request.auth.uid))
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow reciprocal friend addition
    match /users/{userId}/friends/{friendId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId || 
        request.auth.uid == friendId
      );
    }
    
    // Allow searching for users (read-only for authenticated users)
    match /users/{userId} {
      allow read: if request.auth != null;
    }

    // Friend requests collection
    match /friend_requests/{requestId} {
      // Allow creating a request if authenticated
      allow create: if request.auth != null && request.resource.data.fromId == request.auth.uid;
      
      // Allow reading if sender or receiver
      allow read: if request.auth != null && (
        resource.data.fromId == request.auth.uid || 
        resource.data.toId == request.auth.uid
      );
      
      // Allow updating status if sender or receiver
      allow update: if request.auth != null && (
        resource.data.fromId == request.auth.uid || 
        resource.data.toId == request.auth.uid
      );
    }
  }
}
